# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{Makefile,*.mak}]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[{*.feature,*.json,Makefile,*.mak,*.sh,*.tf,yarn.lock,*.yaml,*.yml}]
indent_size = 2
