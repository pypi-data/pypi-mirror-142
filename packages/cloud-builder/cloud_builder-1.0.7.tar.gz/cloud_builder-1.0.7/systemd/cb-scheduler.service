[Unit]
Description=CB Scheduler Service
After=syslog.target
Requires=network-online.target cb-fetch-once

[Service]
EnvironmentFile=-/etc/cloud_builder
Type=simple
Restart=on-failure
ExecStart=/usr/bin/cb-scheduler --build-limit "${CB_BUILD_LIMIT}" --update-interval "${CB_UPDATE}" --repo-server "${CB_COLLECT_REPO_SERVER}" --ssh-user "${CB_SSH_USER}" --ssh-pkey "${CB_SSH_PKEY}"

[Install]
WantedBy=multi-user.target
