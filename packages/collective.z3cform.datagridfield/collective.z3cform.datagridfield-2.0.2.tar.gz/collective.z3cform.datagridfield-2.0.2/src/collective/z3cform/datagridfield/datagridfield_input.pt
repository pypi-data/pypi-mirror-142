<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag=""
>
<div class="pat-datagridfield"
     data-auto-append="${view/auto_append}"
>
  <table class="datagridwidget-table-view"
         id="${view/id_prefix}"
         data-mode="row"
  >
    <thead>
      <tr>
        <tal:block repeat="column view/columns">
          <th class="header"
              tal:define="
                cssclass string:header cell-${repeat/column/number};
                cssclass python: cssclass + (column['mode'] == 'hidden' and ' datagridwidget-hidden-data' or '');
              "
              tal:attributes="
                class cssclass;
              "
          >
            <span tal:content="column/label"
                  i18n:translate=""
            >title</span>
            <span class="required"
                  title="Required"
                  tal:condition="column/required"
                  i18n:attributes="title title_required"
                  i18n:domain="plone"
            >&nbsp;</span>
            <span class="formHelp"
                  tal:condition="column/description"
                  tal:content="column/description"
            >Description</span>
          </th>
        </tal:block>
        <th class="header"
            id=""
            tal:condition="view/allow_insert"
        >
        </th>
        <th class="header"
            id=""
            tal:condition="view/allow_delete"
        >
        </th>
        <th class="header"
            id=""
            tal:condition="view/allow_reorder"
        >
        </th>
        <th class="header"
            id=""
            tal:condition="view/allow_reorder"
        >
        </th>
      </tr>
    </thead>
    <tbody class="datagridwidget-body"
           tal:attributes="
             data-name_prefix view/name_prefix;
             data-id_prefix view/id_prefix;
           "
    >
      <tal:block repeat="widget view/widgets">
        <tr tal:condition="python:view._includeRow(widget.name)"
            tal:attributes="
              class python:'%s row-%d%s' % (widget.klass, repeat['widget'].number(), widget.mode=='hidden' and ' hidden' or '');
              data-index python:widget.name.split('.')[-1];
            "
        >
          <metal:block define-macro="widget-row">
            <div tal:replace="structure widget/render"></div>
          </metal:block>
        </tr>
      </tal:block>
    </tbody>
  </table>
  <input type="hidden"
         tal:replace="structure view/counterMarker"
  />
</div>
</html>
