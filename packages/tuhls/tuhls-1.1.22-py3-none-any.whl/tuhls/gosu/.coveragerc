[run]
concurrency = multiprocessing
omit =
    */tests/*
    */migrations/*
    **/node_modules/**
    */site-packages/*
    */dist-packages/*
    */distutils/*
    **/manage.py
    */asgi.py
    */wsgi.py
    .venv*
    **/_version.py
    **/versioneer.py

plugins =
    django_coverage_plugin

[report]
skip_covered = True
fail_under = 50
sort = miss
show_missing = True

exclude_lines =
    pragma: no cover