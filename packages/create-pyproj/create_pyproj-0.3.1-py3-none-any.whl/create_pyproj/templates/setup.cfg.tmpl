[metadata]
name = ${projectname}
version = 0.0.0
description = ${description}
long_description_content_type = text/markdown
long_description = file: README.md
author = ${author}
author_email = ${author_email}

[options]
packages = find:
include_package_data = True
python_requires = >=3.6
install_requires =
    pipenv

% if cli:
[options.entry_points]
console_scripts =
    ${projectname}=${projectname.replace('-', '_')}:main
% endif

[sdist]
formats = zip, gztar

